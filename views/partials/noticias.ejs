<div class="uk-width-1-1 uk-section uk-section-muted uk-padding-remove-vertical uk-margin-remove-vertical">
  <h2 class="uk-text-center uk-padding-small"><a class="uk-text-bolder uk-text-secondary"
      href="../noticias">Noticias</a></h2>
  <div class="uk-child-width-3-4 uk-padding-small"
    uk-slider="center: true; autoplay: true; autoplay-interval: 4000; pause-on-hover: true">
    <div class="uk-position-relative uk-visible-toggle uk-light" tabindex="-1">
      <ul class="uk-slider-items uk-child-width-1-3@s uk-grid">
        <% noticias.forEach(function(noticia){ %>
        <li>
          <div class="uk-card uk-card-default">
            <div class="uk-card-media-top uk-transition-toggle">
              <a href="noticias/<%= noticia._id %>"><img class="uk-transition-scale-up uk-transition-opaque"
                  src="<%= noticia.imagen %>" alt="" loading="lazy" /></a>
            </div>
            <div class="uk-card-body uk-padding-small">
              <a href="noticias/<%= noticia._id %>">
                <p class="uk-card-title"><%= noticia.titulo %></p>
              </a>
              <p class="uk-text-small"><%= noticia.extracto %></p>
            </div>
          </div>
        </li>
        <% }) %>
      </ul>
      <a class="uk-position-center-left" id="arrows" href="#" uk-slidenav-previous uk-slider-item="previous"></a>
      <a class="uk-position-center-right" id="arrows" href="#" uk-slidenav-next uk-slider-item="next"></a>
    </div>
    <ul class="uk-slider-nav uk-dotnav uk-flex-center uk-margin"></ul>
  </div>
</div>