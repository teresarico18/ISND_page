<%- include("../partials/header"); %>

<div class="uk-section uk-preserve-color uk-padding-remove-top">
  <h1 class="uk-text-center uk-margin-top">Noticias y Eventos</h1>
  <div class="uk-container">
    <div class="uk-panel uk-margin-small">
      <div class="uk-container">
        <ul class="uk-breadcrumb uk-text-left">
          <li><a href="index.html">Inicio</a></li>
          <li class="uk-disabled"><a>Noticias</a></li>
        </ul>
      </div>
    </div>
    <div class="uk-grid-match uk-child-width-1-3@s" uk-grid="masonry: true">
      <% noticias.forEach( function(noticia, iterador){ %>
      <div>
        <div class="uk-card uk-card-default uk-card-body uk-padding-remove">
          <% if(iterador% 2 == 0) {%>
          <div class="uk-card-media-top">
            <img src="<%= noticia.imagen %>" alt="" loading="lazy" />
          </div>
          <div class="uk-card-body">
            <h3 class="uk-card-title"><%= noticia.titulo %></h3>
            <p class="uk-text-meta uk-margin-remove-top">
              <time datetime=""><%= noticia.fecha.toDateString()%></time>
            </p>
            <p><%= noticia.extracto %></p>
          </div>
          <% } else {%>
          <div class="uk-card-body">
            <h3 class="uk-card-title"><%= noticia.titulo %></h3>
            <p class="uk-text-meta uk-margin-remove-top">
              <time datetime=""><%= noticia.fecha.toDateString() %></time>
            </p>
            <p><%= noticia.extracto %></p>
          </div>
          <div class="uk-card-media-bottom">
            <img src="<%= noticia.imagen %>" alt="" loading="lazy" />
          </div>
          <% } %>

          <div class="uk-card-footer">
            <a href="noticias/<%= noticia._id %>" class="uk-button uk-button-text">Leer m√°s</a>
          </div>
        </div>
      </div>
      <% }); %>
    </div>
  </div>
</div>

<%- include("../partials/footer"); %>